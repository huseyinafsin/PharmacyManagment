@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"]= "Create Customer";
}

<div class="col-xl-8 ">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Create Customer </h3>
                </div>
                <div class="col-4 text-right">
                    <a href="#!" class="btn btn-sm btn-primary">Settings</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="CreateCustomer" method="post">
                <h6 class="heading-small text-muted mb-4">Customer information</h6>
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="CustomerName">Customer Name</label>
                                <input type="text" asp-for="CustomerName" class="form-control" placeholder="Customer Name" value="lucky.jesse">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="CustomerEmail">Email address</label>
                                <input type="email" asp-for="CustomerEmail" class="form-control" placeholder="jesse@example.com">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="CustomerPhone">Phone Number</label>
                                <input type="tel" asp-for="CustomerPhone" class="form-control" placeholder="+90 _ _ _ _" value="Lucky">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="DateofBird">Last name</label>
                                <input type="date" asp-for="DateofBird" class="form-control"  value="Jesse">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="CustomerGender">Gender</label>
                                <select class="form-control">
                                    <option value="">--Select Gender--</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="DateofBird">Upload a Image</label>
                                <input asp-for="CustomerImage" type="file">
                                <span asp-validation-for="CustomerImage"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="my-4" />
                <!-- Address -->
                <h6 class="heading-small text-muted mb-4">Address information</h6>
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Address.City">City</label>
                                <input type="text" asp-for="Address.City" class="form-control" placeholder="City" value="Ankara">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Address.State">State</label>
                                <input type="text" asp-for="Address.State" class="form-control" placeholder="State" value="Çankaya">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Address.Zip">Postal code</label>
                                <input type="number"asp-for="Address.Zip" class="form-control" placeholder="Postal code">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Address.Address1">Address</label>
                                <input asp-for="Address.Address2" class="form-control" placeholder="Home Address" value="Bld Mihail Kogalniceanu, nr. 8 Bl 1, Sc 1, Ap 09" type="text">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Address.Address1">Address</label>
                                <input asp-for="Address.Address2" class="form-control" placeholder="Home Address" value="Bld Mihail Kogalniceanu, nr. 8 Bl 1, Sc 1, Ap 09" type="text">
                            </div>
                        </div>
                    </div>

                </div>
                <hr class="my-4" />
                <span class="bg-danger"> ViewBagView.Error</span>
                <input asp-page-handler="Upload" class="btn btn-primary" type="submit" value="Upload" />
            </form>
        </div>
    </div>
</div>

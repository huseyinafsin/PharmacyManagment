@model List<PharmacyManagmentV2.Models.RoleAssignViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Roles Assign";
    Layout = "Layout";
}
<h1>Role Assign</h1>
<form asp-action="RoleAssign" asp-controller="Admin">
    <table class="table">
        <thead>
            <tr>
                <th>
                </th>
                <th>
                    Role Name
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td><input type="checkbox" asp-for="@Model[i].HasAssign" /> </td>
                    <td>
                        @Model[i].RoleName
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                    </td>
                </tr>
            }
            <tr>
                <td colspan="2">
                    <button>Assign</button>
                </td>
            </tr>
        </tbody>
    </table>

</form>
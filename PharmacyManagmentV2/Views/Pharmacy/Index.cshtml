@model IEnumerable<PharmacyManagmentV2.Data.Pharmacy>

@{
    ViewData["Title"] = "Index";
    Layout = "Layout";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
